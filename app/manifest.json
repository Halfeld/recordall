{
  "name": "Recordall",
  "description": "Simple and powerful chrome extension to record screens.",
  "version": "0.1.0",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "main.js"
      ]
    }
  },
  "icons": {
    "16": "recordall-16.png",
    "128": "recordall-128.png"
  },
  "permissions": [
    "desktopCapture",
    "storage",
    "notifications"
  ]
}
